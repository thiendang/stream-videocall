<div class="localStream wow bounceInRight" ng-controller="LocalStreamController as localStream">
	<p><%= username %><input ng-model="localStream.name" placeholder="Tên của bạn" class="input" /></p>
	<video id="localVideo" muted="muted" autoplay="true"></video>
	
	<li ng-click="localStream.toggleCam()">
		<a href>{{ localStream.cameraIsOn ? 'Kết thúc' : 'Bắt đầu' }}</a>
	</li>
	<div ng-show="localStream.cameraIsOn">		
		<p id="copyTarget"><a href="{{localStream.link}}" target="blank"></a></p><button id="copyButton">Chép Link chia sẽ</button>
	</div>
</div>